{
    "manifest_version": 3,
    "name": "ImageBoard",
    "version": "1.0",
    "description": "Copy/Paste multiple images to clipboard",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "clipboardRead"
    ],    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }

}